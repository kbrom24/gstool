- name: playbook for git
  hosts: vagrant
  sudo: True
  tasks:
    - name: install apt packages
      apt: pkg={{ item }} update_cache=yes cache_valid_time=3600
      sudo: True
      with_items:
         - git
         - libjpeg-dev
         - libpq-dev
         - memcached
         - nginx
         #- postgresql
         #- python-dev
